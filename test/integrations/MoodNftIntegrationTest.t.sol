pragma solidity ^0.8.18;

import {Test, console} from "forge-std/Test.sol";
import {MoodNft} from "src/MoodNft.sol";
import {DeployMoodNft} from "script/DeployMoodNft.s.sol";

contract MoodNftIntegrationTest is Test {
    MoodNft moodNft;
    DeployMoodNft deployer;

    string public constant HAPPY_SVG_IMAGE_URI =
        "data:image/svg+xml;base64,";

    string public constant SAD_SVG_IMAGE_URI =
        "data:image/svg+xml;base64,";

    string public constant SAD_SVG_TOKEN_URI =
        "data:application/json;base64,";

    address USER = makeAddr("user");

    function setUp() public {
        deployer = new DeployMoodNft();
        moodNft = deployer.run();
    }

    function testViewTokenURIIntegration() public {
        vm.prank(USER);
        moodNft.mintNft();
        console.log(moodNft.tokenURI(0));
    }

    function testFlipTokenToSad() public {
        // Arrange
        vm.prank(USER);
        moodNft.mintNft();
        MoodNft.Mood startingMood = moodNft.getMoodByTokenId(0);
        // Act
        vm.prank(USER);
        moodNft.flipMood(0);
        // Assert
        MoodNft.Mood endingMood = moodNft.getMoodByTokenId(0);
        assert(startingMood != endingMood);
        assert(startingMood == MoodNft.Mood.HAPPY);
        assert(endingMood == MoodNft.Mood.SAD);

        assertEq(
            keccak256(abi.encodePacked(moodNft.tokenURI(0))),
            keccak256(abi.encodePacked(SAD_SVG_TOKEN_URI))
        );
    }
}
